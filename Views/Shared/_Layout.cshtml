<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SKY_Journey</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SKY_Journey.styles.css" asp-append-version="true" />
    <style>
        /* Custom Light Blue Navbar */
        .navbar-custom {
            background-color: #87CEEB !important; /* Light Blue */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #000 !important; /* Black text for contrast */
                font-size: 1.2rem; /* Increase font size */
            }
        /* Center Navigation Links */
        .navbar-nav {
            margin: 0 auto;
            display: flex;
            justify-content: center;
            flex-grow: 1;
        }
        /* Adjust Login Button - Move Left */
        .login-btn {
            margin-left: 10px; /* Move a little to the left */
            border-radius: 50px; /* Rounded button */
            padding: 10px 20px;
            font-weight: bold;
            transition: all 0.3s ease;
            color: black; /* Black text on button */
        }

            .login-btn:hover {
                background-color: #1b6ec2; /* Darken on hover */
                color: #fff;
            }

        /* Modal Custom Styling */
        .modal-content {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .modal-header {
            background-color: #87CEEB; /* Light Blue Matching Navbar */
            color: #000; /* Black Text */
            text-align: center; /* Center Heading */
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 15px; /* Add padding to make it more centered */
        }

        .modal-body {
            padding: 30px;
            background-color: #f9f9f9;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 20px;
            padding: 15px;
            font-size: 1rem;
            box-shadow: none;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #87CEEB; /* Light Blue Focus Border */
                box-shadow: 0 0 5px rgba(135, 206, 235, 0.5); /* Light Blue Focus Shadow */
            }

        .btn-primary {
            background-color: #87CEEB; /* Matching Light Blue */
            border-radius: 25px;
            padding: 10px 30px;
            font-size: 1rem;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1b6ec2; /* Darker Blue on Hover */
            }
        /* Links */
        .text-muted {
            font-size: 0.9rem;
            text-decoration: none;
        }

            .text-muted:hover {
                text-decoration: underline;
            }

        /* Spacing between elements */
        .form-container {
            padding: 20px;
        }

        .tab-content {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SKY_Journey</a>

                <!-- Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Centered Navigation Links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Flight" asp-action="Status">Flight Status</a>
                        </li>
                    </ul>
                </div>

                <!-- Login Button - Moved Slightly Left -->
                <a class="btn btn-outline-dark login-btn" href="@Url.Action("Login", "LoginRegister")">Login</a>


            </div>
        </nav>
    </header>

    <!-- Modal Structure for Login -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
