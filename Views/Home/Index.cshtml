@{
    ViewData["Title"] = "Home Page";
}
<!-- Include Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="text-center" style="position: relative;
    background-image: url('/images/backs.png');
    background-size: cover;
    background-position: right;
    height: 100vh;">
    <!-- Adjusted height for better spacing -->
    <!-- Main Text Overlay -->
    <h1 style="position: absolute;
        top: 10%;
        left: 2%;
        color: black; /* Text color */
        font-size: 3rem;
        font-weight: bold;
        max-width: 40%;">
        Discover & book a perfect flight today!
    </h1>

    <!-- Search for Flights Text -->
    <h2 style="position: absolute;
        top: 50%; /* Positioned below the main heading */
        left: 2%;
        color: #87CEEB; /* Light blue color */
        font-size: 3rem; /* Larger font size */
        font-weight: bold;
        max-width: 40%;">
        Search for Flights
    </h2>

    <!-- Merged Container -->
    <div style="position: absolute;
     top: 70%; /* Moved downward */
     left: 2%; /* Align container to the left like the h2 */
     width: 92%; /* Increased width to fit both sections */
     height: 40%; /* Adjusted height dynamically */
     background-color: #87CEEB; /* Light grey color */
     backdrop-filter: blur(5px); /* Apply the blur effect */
     border-radius: 10px; /* Optional: rounded corners */
     padding: 20px;
     display: flex;
     flex-wrap: wrap;
     justify-content: space-between;
     box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Added shadow */">

        <!-- Left Side: Departure & Arrival Airports -->
        <div style="width: 48%; padding-right: 10px;">
            <div style="display: flex; align-items: center; margin-bottom: 5px;">
                <i class="fas fa-plane-departure" style="color: black; margin-right: 8px;"></i>
                <label for="departure" style="color: black; font-weight: bold;">Departure Airport</label>
            </div>
            <select id="departure" style="width: 100%; padding: 12px; font-size: 1rem; height: 50px; border-radius: 5px;">
                <option value="jnb">O. R. Tambo International Airport (JNB) - Johannesburg</option>
                <option value="cpt">Cape Town International Airport (CPT) - Cape Town</option>
                <option value="dur">King Shaka International Airport (DUR) - Durban</option>
                <option value="plz">Port Elizabeth International Airport (PLZ) - Port Elizabeth</option>
                <option value="grj">George Airport (GRJ) - George</option>
                <option value="els">East London Airport (ELS) - East London</option>
                <option value="znz">Zanzibar Abeid Amani Karume International Airport (ZNZ) - Zanzibar</option>
                <option value="mru">Mauritius Sir Seewoosagur Ramgoolam International Airport (MRU) - Mauritius</option>
            </select>

            <div style="display: flex; align-items: center; margin-top: 15px;">
                <i class="fas fa-plane-arrival" style="color: black; margin-right: 8px;"></i>
                <label for="arrival" style="color: black; font-weight: bold;">Arrival Airport</label>
            </div>
            <select id="arrival" style="width: 100%; padding: 12px; font-size: 1rem; height: 50px; border-radius: 5px;">
                <option value="jnb">O. R. Tambo International Airport (JNB) - Johannesburg</option>
                <option value="cpt">Cape Town International Airport (CPT) - Cape Town</option>
                <option value="dur">King Shaka International Airport (DUR) - Durban</option>
                <option value="plz">Port Elizabeth International Airport (PLZ) - Port Elizabeth</option>
                <option value="grj">George Airport (GRJ) - George</option>
                <option value="els">East London Airport (ELS) - East London</option>
                <option value="znz">Zanzibar Abeid Amani Karume International Airport (ZNZ) - Zanzibar</option>
                <option value="mru">Mauritius Sir Seewoosagur Ramgoolam International Airport (MRU) - Mauritius</option>
            </select>
        </div>

        <!-- Right Side: Flight Type, Date Pickers & Passenger Info -->
        <div style="width: 48%; display: flex; flex-wrap: wrap; justify-content: space-between; gap: 10px;">
            <div style="width: 100%; text-align: center;">
                <label for="flightType" style="font-weight: bold;">Flight Type</label>
                <select id="flightType" style="width: 100%; padding: 5px; border-radius: 5px;">
                    <option value="oneway">One Way</option>
                    <option value="return">Return</option>
                </select>
            </div>
            <div style="width: 48%; text-align: center;">
                <label for="departing" style="font-weight: bold;">Departing</label>
                <input type="date" id="departing" style="width: 100%; padding: 5px; border-radius: 5px;">
            </div>
            <div style="width: 48%; text-align: center;">
                <label for="returning" style="font-weight: bold;">Returning</label>
                <input type="date" id="returning" style="width: 100%; padding: 5px; border-radius: 5px;">
            </div>
            <div style="width: 48%; text-align: center;">
                <label for="adults" style="font-weight: bold;">Adults (18+)</label>
                <select id="adults" style="width: 100%; padding: 5px; border-radius: 5px;">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </select>
            </div>
            <div style="width: 48%; text-align: center;">
                <label for="children" style="font-weight: bold;">Children (0-17)</label>
                <select id="children" style="width: 100%; padding: 5px; border-radius: 5px;">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Show Flights Button below the container -->
<<div style="text-align: center; margin-top: 80px;">
    <a href="@Url.Action("Index", "Flights")">
        <button style="padding: 15px 30px; font-size: 1.2rem; background-color: #87CEEB; color: white; border: none; border-radius: 5px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); cursor: pointer; transition: background-color 0.3s;">
            Show Flights
        </button>
    </a>
</div>

<!-- Container wrapper to align the blue containers horizontally -->
<div class="container-wrapper" style="display: flex; justify-content: space-between; margin-top: 50px;">

    <!-- Blue Containers with curved corners and color #87CEEB -->
    <div class="blue-container" style="height: 300px; width: 300px; background-color: #87CEEB; opacity: 0; transform: translateY(50px); transition: opacity 1s, transform 1s; margin-right: 20px; border-radius: 15px;">
        Container 1
    </div>
    <div class="blue-container" style="height: 300px; width: 300px; background-color: #87CEEB; opacity: 0; transform: translateY(50px); transition: opacity 1s, transform 1s; margin-right: 20px; border-radius: 15px;">
        Container 2
    </div>
    <div class="blue-container" style="height: 300px; width: 300px; background-color: #87CEEB; opacity: 0; transform: translateY(50px); transition: opacity 1s, transform 1s; margin-right: 20px; border-radius: 15px;">
        Container 3
    </div>
    <div class="blue-container" style="height: 300px; width: 300px; background-color: #87CEEB; opacity: 0; transform: translateY(50px); transition: opacity 1s, transform 1s; border-radius: 15px;">
        Container 4
    </div>

</div>

<script>
    // Function to handle the scroll event and trigger transitions
    function handleScroll() {
        const containers = document.querySelectorAll('.blue-container');
        containers.forEach(container => {
            const containerPosition = container.getBoundingClientRect().top;
            const windowHeight = window.innerHeight;

            if (containerPosition < windowHeight * 0.8) {
                container.style.opacity = 1;
                container.style.transform = 'translateY(0)';
            }
        });
    }

    // Listen for the scroll event
    window.addEventListener('scroll', handleScroll);

    // Trigger the scroll handler when the page loads, in case the containers are already in view
    handleScroll();
</script>

