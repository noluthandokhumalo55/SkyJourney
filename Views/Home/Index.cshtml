@{
    ViewData["Title"] = "Home Page";
}
<!-- Include Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="text-center" style="position: relative;
    background-image: url('/images/backs.png');
    background-size: cover;
    background-position: right;
    height: 90vh;">

    <!-- Main Text Overlay -->
    <h1 style="position: absolute;
        top: 10%;
        left: 2%;
        color: black; /* Text color */
        font-size: 3rem;
        font-weight: bold;
        max-width: 40%;">
        Discover & book a perfect flight today!
    </h1>

    <!-- Search for Flights Text -->
    <h2 style="position: absolute;
        top: 50%; /* Positioned below the main heading */
        left: 2%;
        color: #87CEEB; /* Light blue color */
        font-size: 3rem; /* Larger font size */
        font-weight: bold;
        max-width: 40%;">
        Search for Flights
    </h2>

    <!-- Blue Transparent Blurry Container Below the h2 -->
    <div style="position: absolute;
     top: 65%; /* Positioned below the h2 */
     left: 2%; /* Align container to the left like the h2 */
     width: 40%; /* Keep the previous width */
     height: 20%; /* Adjust height to fit the content */
     background-color: #87CEEB; /* Light sky blue color */
     backdrop-filter: blur(5px); /* Apply the blur effect */
     border-radius: 10px; /* Optional: rounded corners */
     padding: 20px;
     display: flex;
     justify-content: space-between;
     box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Added shadow to blue container */">

        <!-- Left Side: Departure Airport -->
        <div style="width: 45%; padding-right: 10px;">
            <div style="display: flex; align-items: center; margin-top: 5px;">
                <!-- Departure Icon -->
                <i class="fas fa-plane-departure" style="color: black; margin-right: 8px;"></i>
                <!-- Departure Label -->
                <label for="departure" style="color: black; font-weight: bold;">Departure Airport</label>
            </div>
            <select id="departure" style="width: 100%; padding: 12px; font-size: 1rem; margin-top: 5px; height: 50px; border-radius: 5px;">
                <option value="jnb">O. R. Tambo International Airport (JNB) - Johannesburg</option>
                <option value="cpt">Cape Town International Airport (CPT) - Cape Town</option>
                <option value="dur">King Shaka International Airport (DUR) - Durban</option>
                <option value="plz">Port Elizabeth International Airport (PLZ) - Port Elizabeth</option>
                <option value="grj">George Airport (GRJ) - George</option>
                <option value="els">East London Airport (ELS) - East London</option>
                <option value="znz">Zanzibar Abeid Amani Karume International Airport (ZNZ) - Zanzibar</option>
                <option value="mru">Mauritius Sir Seewoosagur Ramgoolam International Airport (MRU) - Mauritius</option>
            </select>
        </div>

        <!-- Right Side: Arrival Airport -->
        <div style="width: 45%; padding-left: 10px;">
            <div style="display: flex; align-items: center; margin-top: 5px;">
                <!-- Arrival Icon -->
                <i class="fas fa-plane-arrival" style="color: black; margin-right: 8px;"></i>
                <!-- Arrival Label -->
                <label for="arrival" style="color: black; font-weight: bold;">Arrival Airport</label>
            </div>
            <select id="arrival" style="width: 100%; padding: 12px; font-size: 1rem; margin-top: 5px; height: 50px; border-radius: 5px;">
                <option value="jnb">O. R. Tambo International Airport (JNB) - Johannesburg</option>
                <option value="cpt">Cape Town International Airport (CPT) - Cape Town</option>
                <option value="dur">King Shaka International Airport (DUR) - Durban</option>
                <option value="plz">Port Elizabeth International Airport (PLZ) - Port Elizabeth</option>
                <option value="grj">George Airport (GRJ) - George</option>
                <option value="els">East London Airport (ELS) - East London</option>
                <option value="znz">Zanzibar Abeid Amani Karume International Airport (ZNZ) - Zanzibar</option>
                <option value="mru">Mauritius Sir Seewoosagur Ramgoolam International Airport (MRU) - Mauritius</option>
            </select>
        </div>

    </div>

    <!-- Light Grey Container Below the Blue One -->
    <div style="position: absolute;
    top: 90%; /* Positioned below the blue container */
    left: 2%;
    width: 80%; /* Increased width to make everything fit in a straight line */
    height: 15%; /* Keep the height to accommodate the elements */
    background-color: #D3D3D3; /* Light grey color */
    border-radius: 10px;
    padding: 20px; /* Adjusted padding for better spacing */
    display: flex; /* Align elements in a row */
    justify-content: space-between; /* Distribute space between elements */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Added shadow to grey container */
    gap: 20px; /* Add some space between elements */
">

        <!-- Departing Label and Date Picker -->
        <div style="flex: 1; text-align: center;">
            <label for="departing" style="font-weight: bold;">Departing</label>
            <input type="date" id="departing" style="width: 100%; padding: 5px; border-radius: 5px;">
        </div>

        <!-- Returning Label and Date Picker -->
        <div style="flex: 1; text-align: center;">
            <label for="returning" style="font-weight: bold;">Returning</label>
            <input type="date" id="returning" style="width: 100%; padding: 5px; border-radius: 5px;">
        </div>

        <!-- Adults (18+) Label and Dropdown -->
        <div style="flex: 1; text-align: center;">
            <label for="adults" style="font-weight: bold;">Adults (18+)</label>
            <select id="adults" style="width: 100%; padding: 5px; border-radius: 5px;">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
            </select>
        </div>

        <!-- Children (0-17) Label and Dropdown -->
        <div style="flex: 1; text-align: center;">
            <label for="children" style="font-weight: bold;">Children (0-17)</label>
            <select id="children" style="width: 100%; padding: 5px; border-radius: 5px;">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>
        </div>

        


    </div>


</div>

<!-- Bootstrap JS (ensure this is included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
