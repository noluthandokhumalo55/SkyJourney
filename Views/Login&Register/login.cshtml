@{
}

<!-- Full Page Background with Light Blue Color and Login Forms -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; position: relative;
    background-color: #87CEEB; /* Light Blue Background */
    background-image: url('/images/blue-cloud-clouds-cloudy-389642.jpg');
    background-size: cover;
    background-position: center;">
    <!-- Tabs Block with White Background (Semi-transparent for better contrast) -->
    <div class="container bg-white p-4 rounded shadow" style="width: 100%; max-width: 600px; opacity: 0.9;">
        <!-- Nav Tabs -->
        <ul class="nav nav-tabs" id="loginTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="client-tab" data-bs-toggle="tab" href="#client" role="tab" aria-controls="client" aria-selected="true">Client Login</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="travel-agent-tab" data-bs-toggle="tab" href="#travel-agent" role="tab" aria-controls="travel-agent" aria-selected="false">Travel Agent Login</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content p-4 shadow rounded bg-white" id="loginTabsContent">
            <!-- Client Login Form -->
            <div class="tab-pane fade show active" id="client" role="tabpanel" aria-labelledby="client-tab">
                <form class="form-container">
                    <!-- Email Input Field -->
                    <div class="mb-3">
                        <label for="client-email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="client-email" placeholder="Enter email" required>
                        </div>
                    </div>

                    <!-- Password Input Field -->
                    <div class="mb-3">
                        <label for="client-password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="client-password" placeholder="Enter password" required>
                        </div>
                    </div>

                    <!-- Forgot Password and Register Links -->
                    <div class="d-flex justify-content-between">
                        <a href="#" class="text-muted">Forgot Password?</a>
                        <a href="@Url.Action("Index", "ClientRegister")" class="text-muted">Don't have an account? Register</a>


                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary mt-3 w-100">Login</button>
                </form>
            </div>

            <!-- Travel Agent Login Form -->
            <div class="tab-pane fade" id="travel-agent" role="tabpanel" aria-labelledby="travel-agent-tab">
                <form class="form-container">
                    <div class="mb-3">
                        <label for="travel-agent-email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" class="form-control" id="travel-agent-email" placeholder="Enter email" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="travel-agent-pin" class="form-label">PIN</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            <input type="password" class="form-control" id="travel-agent-pin" placeholder="Enter PIN" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="travel-agent-password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" class="form-control" id="travel-agent-password" placeholder="Enter password" required>
                        </div>
                    </div>

                    <!-- Forgot Password and Register Links -->
                    <div class="d-flex justify-content-between">
                        <a href="#" class="text-muted">Forgot Password?</a>
                        <a href="@Url.Action("TravelAgentRegister", "AgentRegister")" class="text-muted">Don't have an account? Register</a>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary mt-3 w-100">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
