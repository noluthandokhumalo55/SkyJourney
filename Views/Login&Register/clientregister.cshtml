@{
    ViewData["Title"] = "Client Registration";
}

<!-- Full Page Background with Light Blue Color -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; position: relative;
    background-color: #87CEEB; /* Light Blue Background */
    background-image: url('/images/blue-cloud-clouds-cloudy-389642.jpg');
    background-size: cover;
    background-position: center;">

    <!-- Registration Form Container -->
    <div class="container bg-white p-4 rounded shadow" style="width: 100%; max-width: 600px; opacity: 0.9;">
        <h3 class="text-center mb-4">Client Registration</h3>

        <!-- Registration Form -->
        <form method="post" asp-action="Register" asp-controller="ClientRegister">
            <!-- Full Name Input -->
            <div class="mb-3">
                <label for="FullName" class="form-label">Full Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="FullName" name="FullName" placeholder="Enter full name" required>
                </div>
            </div>

            <!-- Email Input -->
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email" required>
                </div>
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter password" required>
                </div>
            </div>

            <!-- Confirm Password Input -->
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm password" required>
                </div>
            </div>

            <!-- Already have an account? Login link -->
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "CustomerLogin")" class="text-muted">Already have an account? Login</a>
            </div>

            <!-- Register Button (Blue) -->
            <button type="submit" class="btn btn-primary mt-3 w-100">Register</button>
        </form>
    </div>
</div>

<!-- FontAwesome and Bootstrap (Ensure it's included in _Layout.cshtml) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
